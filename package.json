{
  "name": "meta-cms-worker-hexo",
  "version": "0.1.0",
  "description": "CMS Worker for hexo",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "source": "src/main.ts",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "targets": {
    "main": {
      "includeNodeModules": true
    }
  },
  "engines": {
    "node": ">=14 <15"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "parcel build",
    "build:tsc": "tsc --project tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:prod": "NODE_ENV='production' node dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "@metaio/worker-common": "1.5.4",
    "@metaio/worker-model": "1.5.4",
    "cron": "^1.8.2",
    "dotenv-flow": "^3.2.0",
    "fs-extra": "^10.0.0",
    "hexo": "^5.4.0",
    "hexo-fs": "^3.1.0",
    "resolve": "^1.20.0",
    "superagent": "^6.1.0",
    "winston": "^3.3.3",
    "winston-loki": "^6.0.1",
    "yaml": "^2.0.0-7"
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.0.0",
    "@parcel/transformer-typescript-types": "^2.0.0",
    "@types/cron": "^1.7.3",
    "@types/dotenv-flow": "^3.2.0",
    "@types/fs-extra": "^9.0.12",
    "@types/hexo": "^3.8.7",
    "@types/hexo-fs": "^0.2.10",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.7.1",
    "@types/resolve": "^1.20.1",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.1.2",
    "node-dev": "^7.0.0",
    "parcel": "^2.0.0",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  },
  "alias": {
    "stack-trace": "./npm/node-stack-trace-0.0.10/lib/stack-trace.js"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix"
  }
}
