{
  "compilerOptions": {
    "module": "es6",
    "target": "esnext",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "isolatedModules": true,
    "sourceMap": true
  },
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
